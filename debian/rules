#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS+=hardening=+all

%:
	dh $@ --buildsystem=makefile --without=autoreconf

override_dh_auto_build:
	dh_auto_build -- \
		STRIP=: \
		V=1

override_dh_auto_install:
	install vfu/vfu.yas debian/vfu-yascreen/usr/bin/vfu-yascreen
	install vfu/vfu debian/vfu-ncurses/usr/bin/vfu-ncurses
	install rx/rx_* debian/vfu/usr/libexec/vfu
	install -m644 vfu.conf debian/vfu/etc
